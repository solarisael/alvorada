---
import "../styles/components/desktop-nav.css";
---

<nav id="desktop-nav" class="navbar-preset-rich route-active-tone-medium">
  <div id="nav-user-bar" class="nav-rail" data-nav-rail>
    <div class="nav-rail-layer nav-rail-layer-cursor-glow"></div>

    <div class="nav-links">
      <a
        class="nav-pill"
        data-nav-pill
        data-phase="nigredo"
        href="/nigredo"
        hx-get="/nigredo"
        hx-push-url="true"
      >
        <span class="nav-pill-layer nav-pill-layer-ring"></span>
        nigredo</a
      >
      <a
        class="nav-pill"
        data-nav-pill
        data-phase="albedo"
        href="/albedo"
        hx-get="/albedo"
        hx-push-url="true"
      >
        <span class="nav-pill-layer nav-pill-layer-ring"></span>
        albedo</a
      >
    </div>

    <div id="middle-guy"></div>

    <a id="icon-user" href="/">
      <span class="icon-user-layer icon-user-layer-orbit"></span>

      <div id="icon-user-shell">
        <div class="cinza_sun_halo"></div>
        <div class="cinza_sun_highlight"></div>
        <div id="icon-user-shell-inner"></div>
      </div>

      <div id="icon-user-core">
        <img
          id="icon-user-photo"
          src="/images/sol-curr.jpg"
          alt="Sol logo placeholder"
        />
      </div>
    </a>

    <div class="nav-links">
      <a
        class="nav-pill"
        data-nav-pill
        data-phase="citrinitas"
        href="/citrinitas"
        hx-get="/citrinitas"
        hx-push-url="true"
      >
        <span class="nav-pill-layer nav-pill-layer-ring"></span>
        citrinitas</a
      >
      <a
        class="nav-pill"
        data-nav-pill
        data-phase="rubedo"
        href="/rubedo"
        hx-get="/rubedo"
        hx-push-url="true"
      >
        <span class="nav-pill-layer nav-pill-layer-ring"></span>
        rubedo</a
      >
      <a
        class="nav-pill"
        data-nav-pill
        data-phase="codex"
        href="/codex"
        hx-get="/codex"
        hx-push-url="true"
      >
        <span class="nav-pill-layer nav-pill-layer-ring"></span>
        codex</a
      >
    </div>
  </div>
</nav>

<script type="module" src="/js/modules/navbar_runtime.js"></script>
