---
import { Image } from "astro:assets";
import "../styles/base.css";
import "../styles/index.css";
import "../styles/components/content-shell.css";
import "../styles/components/footer.css";

import Breadcrumbers from "../components/breadcrumbers.astro";
import MobileNavbar from "../components/mobile_navbar.astro";
import Navbar from "../components/navbar.astro";
import StyleSwitcher from "../components/style_switcher.astro";

const { body_class = "" } = Astro.props;
---

<!doctype html>
<html
  lang="en"
  data-site-theme="cinza"
  data-site-shell="medium"
  data-site-fx="balanced"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Sol's Rest</title>
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon" />

    <script src="/js/scripts.js" type="module"></script>
  </head>
  <body
    class:list={["page-transition-breath-noticeable", body_class]}
    hx-boost="true"
    hx-ext="morph,head-support,preload,sse"
    hx-target="#content"
    hx-select="#content"
    hx-select-oob="#content"
    hx-swap="morph swap:240ms settle:240ms"
    hx-push-url="true"
  >
    <Navbar />
    <MobileNavbar />
    <container>
      <main id="page-main">
        <div id="content_stage">
          <div
            class="content-stage-layer content-stage-layer-fog"
            aria-hidden="true"
          >
          </div>
          <div
            class="content-stage-layer content-stage-layer-rails"
            aria-hidden="true"
          >
          </div>

          <div id="content_fog_backdrop" aria-hidden="true">
            <div class="content-fog-layer content-fog-layer-top"></div>
            <div class="content-fog-layer content-fog-layer-bottom"></div>
          </div>

          <div id="content">
            <div class="content-layer content-layer-surface" aria-hidden="true">
            </div>
            <div class="content-layer content-layer-noise" aria-hidden="true">
            </div>
            <div class="content-layer content-layer-deco" aria-hidden="true">
            </div>
            <div
              class="content-layer content-layer-ornament-svg"
              aria-hidden="true"
            >
              <img
                class="content-ornament content-ornament-corner-tl"
                src="/ornaments/cinza/frame_corner_tl.svg"
                alt=""
                loading="eager"
                decoding="async"
              />
              <img
                class="content-ornament content-ornament-corner-tr"
                src="/ornaments/cinza/frame_corner_tr.svg"
                alt=""
                loading="eager"
                decoding="async"
              />
              <img
                class="content-ornament content-ornament-corner-bl"
                src="/ornaments/cinza/frame_corner_bl.svg"
                alt=""
                loading="eager"
                decoding="async"
              />
              <img
                class="content-ornament content-ornament-corner-br"
                src="/ornaments/cinza/frame_corner_br.svg"
                alt=""
                loading="eager"
                decoding="async"
              />
              <img
                class="content-ornament content-ornament-line-top"
                src="/ornaments/cinza/frame_line_top.svg"
                alt=""
                loading="eager"
                decoding="async"
              />
              <img
                class="content-ornament content-ornament-line-bottom"
                src="/ornaments/cinza/frame_line_bottom.svg"
                alt=""
                loading="eager"
                decoding="async"
              />
              <img
                class="content-ornament content-ornament-sigil-top"
                src="/ornaments/cinza/sigil_moon_star.svg"
                alt=""
                loading="eager"
                decoding="async"
              />
              <img
                class="content-ornament content-ornament-sigil-bottom"
                src="/ornaments/cinza/sigil_eye.svg"
                alt=""
                loading="eager"
                decoding="async"
              />
            </div>

            <div class="content-layer-body">
              <div id="main_reading_container">
                <div
                  class="reading-layer reading-layer-surface"
                  aria-hidden="true"
                >
                </div>
                <div
                  class="reading-layer reading-layer-noise"
                  aria-hidden="true"
                >
                </div>

                <div class="reading-layer-body">
                  <Breadcrumbers />
                  <slot />
                </div>
              </div>
            </div>
          </div>
        </div>
        <StyleSwitcher />

        <footer id="footer">
          <a href=""
            >Made with pure hatred <br />
            You should all die</a
          >
        </footer>
      </main>
    </container>
  </body>
</html>
