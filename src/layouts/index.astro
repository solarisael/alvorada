---
import { Image } from "astro:assets";
import "../styles/base.css";
import "../styles/index.css";

import Breadcrumbers from "../components/breadcrumbers.astro";
import Navbar from "../components/navbar.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Sol's Rest</title>
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon" />

    <script src="/js/scripts.js" type="module"></script>
  </head>
  <body
    class="page-transition-breath-subtle"
    hx-boost="true"
    hx-ext="idiomorph,head-support,preload,sse"
    hx-target="#content"
    hx-select="#content"
    hx-swap="outerHTML transition:true"
    hx-push-url="true"
  >
    <Navbar />
    <container>
      <main id="page-main">
        <div id="content">
          <div id="main_reading_shell">
            <div id="main_reading_container">
              <Breadcrumbers />
              <slot />
            </div>
          </div>
        </div>

        <footer id="footer">
          <a href=""
            >Made with pure hatred <br />
            You should all die</a
          >
        </footer>
      </main>
    </container>
  </body>
</html>
